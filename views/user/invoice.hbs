
<link rel="stylesheet" href="/stylesheets/invoice">
<div class="mt-5"></div>
<div class="container mt-6 mb-7">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-xl-7">
            <div class="card">
                <div class="card-body p-5">
                     <a class="navbar-brand mb-2" style="color: #82AE46;text-decoration: none;" href="index.html">ORGANICO</a>
                    <h2>
                        Hey {{orderData.deliveryDetails.name}},
                    </h2>
                    <p class="fs-sm">
                        This is the receipt for a payment of <strong>Rs.{{orderData.totalAmount.[0].total}}</strong>
                        (INR) for the order you placed.
                    </p>

                    <div class="border-top border-gray-200 pt-4 mt-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="text-muted mb-2">Payment Method</div>
                                <strong>{{orderData.paymentMethod}}</strong>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="text-muted mb-2">Payment Date</div>
                                <strong>{{orderData.date}}</strong>
                            </div>
                        </div>
                    </div>

                    <div class="border-top border-gray-200 mt-4 py-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="text-muted mb-2">Address</div>
                                <strong>
                                    {{orderData.deliveryDetails.street}}
                                </strong>
                                <p class="fs-sm">
                                    {{orderData.deliveryDetails.town}}, {{orderData.deliveryDetails.state}},
                                    {{orderData.deliveryDetails.zip}}
                                    <br>
                                    <a href="#!" class="text-purple">{{orderData.deliveryDetails.email}}
                                    </a>
                                </p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="text-muted mb-2">Payment Status</div>

                                <p class="fs-sm">
                                    {{orderData.paymentStatus}}
                                    <br>

                                </p>
                            </div>
                        </div>
                    </div>

