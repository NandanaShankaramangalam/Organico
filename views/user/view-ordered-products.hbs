<div class="container mt-5 mb-5">
  {{#if (eq orderData.orderStatus 'order cancelled')}}
  {{else}}
  <div class="" style="float: right;">
    <a  class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" >Cancel Order</a>
  </div>
  {{/if}}
<div class=" row ">

    {{#each orderItems}}
<div class="col-lg-3 col-md-4 col-sm-6 col-12">
<div class="card mt-3 mb-3" style="width: 15rem;">
   <img src="/product-images/{{productDetails.Images.[0]}}.jpg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-text text-center"><b>{{productDetails.name}}</b></h5>
    <h6 class="card-text text-center" style="color: grey;">{{productDetails.brand}}</h6>
    <h6 class="card-text text-center">Qty:{{quantity}}</h6>
    <h6 class="card-text text-center fw-bold">Rs.{{productDetails.price}}</h6>
  </div> 
  </div>
  </div>
    {{/each}}
    </div>
    </div>

    {{>footer}}

