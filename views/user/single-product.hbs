{{>user-header}}

<div class="hero-wrap hero-bread" style="background-image: url('/images/bg_1.jpg');">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span class="mr-2"><a
							href="index.html">Product</a></span> <span>Product Single</span></p>
				<h1 class="mb-0 bread">Product Single</h1>
			</div>
		</div>
	</div>
</div>

<section class="ftco-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 mb-5 ftco-animate">
				<a id="imageLink" href="/product-images/{{productData.Images.[0]}}.jpg" class="image-popup"><img
						id="productImg" src="/product-images/{{productData.Images.[0]}}.jpg" class="img-fluid"
						alt="Colorlib Template"></a>
				<div class="carousel-inner d-flex ms-md-5 mt-3">

					{{#each productData.Images}}
					<img id="{{@index}}" src="/product-images/{{[]}}.jpg" class="ps-2" onclick="changeImage(this.id)"
						alt="" style="width: 120px;">
					{{/each}}

				</div>
			</div>
			<div class="col-lg-6 product-details pl-md-5 ftco-animate mt-5">
				<h3>{{productData.name}}</h3>
				<h6>{{productData.brand}}</h6>
				<div class="rating d-flex">
				</div>
				<p class="price"><span>Rs.{{productData.price}}</span></p>
				<p>{{productData.description}}</p>
				<div class="row mt-4">
					<div class="col-md-6">
						<div class="form-group d-flex">
						</div>
					</div>

					<div class="w-100"></div>

					<div class="col-md-12">
						{{#if (eq productData.stock 0)}}
						<p class="text-danger">Out of stock!</p>
						{{else}}
						<p style="color: #000;">{{productData.stock}} kg available</p>
						{{/if}}
					</div>

				</div>
				<div class="d-flex">
					{{#if (eq productData.stock 0)}}
					<p><a href="/wishlist/{{productData._id}}" class="btn btn-black py-3 px-5 ms-2"
							style="border-radius: 30px;">Add to WishList</a></p>
					{{else}}
					<p><a href="/add-to-cart/{{productData._id}}" class="btn btn-black py-3 px-5"
							style="border-radius: 30px;">Add to Cart</a></p>
					<p><a href="/wishlist/{{productData._id}}" class="btn btn-black py-3 px-5 ms-2"
							style="border-radius: 30px;">Add to WishList</a></p>
					{{/if}}
				</div>

			</div>
		</div>
	</div>
</section>

{{>footer}}


<script>
	function changeImage(id) {
		var imgsrc = document.getElementById(id).src;
		console.log(imgsrc)
		document.getElementById("imageLink").href = imgsrc;
		document.getElementById("productImg").src = imgsrc;

	}
</script>