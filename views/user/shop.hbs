
 {{>user-header}}

    <div class="hero-wrap hero-bread" style="background-image: url('images/bg_1.jpg');">
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
          	<p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Products</span></p>
            <h1 class="mb-0 bread">Products</h1>
          </div>
        </div>
      </div>
    </div>

    <section class="ftco-section">
    	<div class="container">
    		<div class="row justify-content-center">
    			<div class="col-md-10 mb-5 text-center">
            <div class="container" >
  <div class="dropdown" style="float: left;">
  <a href="/category-all"><button class="btn btn-primary">All</button></a>
  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
    Categories
  </button>
  
  <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
    {{#each categories}}
    <button class="dropdown-item" type="button" id="{{category}}" onclick="category(this.id)">{{category}}</button>
    {{/each}}
  </div>
  
</div>


  <div class="dropdown" style="float: right;">
  <button class="btn btn-primary  dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
 Sort
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
    <button class="dropdown-item" type="button" id="ascending" onclick="sort(this.id)">price from low to high</button>
    <button class="dropdown-item" type="button" id="descending" onclick="sort(this.id)">price from high to low</button>
  </div>
</div>
      <div class="dropdown" style="float: right;left: -10px;">
      <button class="btn btn-primary  dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
       Filter
      </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
    <button class="dropdown-item" type="button" id="less-than-100" onclick="filter(this.id)">less than 100</button>
    <button class="dropdown-item" type="button" id="btw-100-and-300" onclick="filter(this.id)">between 100 and 300</button>
    <button class="dropdown-item" type="button" id="above-300" onclick="filter(this.id)">more than 300</button>
    <button class="dropdown-item" type="button" id="all" onclick="filter(this.id)">all ranges</button>
  </div>
</div> 
            </div>
           
    			</div>
  
    		</div>     
    		<div class="row">
                {{#each products}}
                {{#if status}}
                <div class="col-md-6 col-lg-3 ftco-animate ">
                    <div class="product border pb-1" >
                        <a href="/single-product/{{_id}}" class="img-prod"><img class="img-fluid" src="/product-images/{{Images.[0]}}.jpg" alt="Colorlib Template">
                             {{#if (eq stock 0)}}
                            <span class="status">Out of stock</span>
                            {{/if}}
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3 text-center ">
                            <h3><a href="#" class="">{{name}}</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price"><span class="mr-2 price-dc">Rs.250</span><span class="price-sale">Rs.{{price}}</span>
                                    </p>
                                </div>
                            </div>
                            <div class="bottom-area d-flex px-3 pb-3" style="top: 35px;">
                                <div class="m-auto d-flex">
                                    <a href="/single-product/{{_id}}" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                        <span><i class="ion-ios-menu"></i></span>
                                    </a>
                                    {{#if (eq stock 0)}}
                                    
                                    {{else}}
                                    <a href="/add-to-cart/{{_id}}" onclick="addToCart({{_id}})" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                        <span><i class="ion-ios-cart"></i></span>
                                    </a>
                                    {{/if}}
                                    <a href="/wishlist/{{_id}}" class="heart d-flex justify-content-center align-items-center ">
                                        <span><i class="ion-ios-heart"></i></span>
                                    </a>
                                    
                                </div>  
                                </div>
                                </div>
                                </div>
                               
                </div>
                {{/if}}
                 {{/each}}
                 </div> 

    		<div>
          <p class="text-secondary text-center mb-5">{{filterMsg}}</p>
        </div>

    		

    			
