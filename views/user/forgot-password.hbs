<section class="vh-100 bg-image" style="background-color: white;">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-4 ">
              <h4 class="text-uppercase text-center mb-3">Forgot your password?</h4>
              <p class="text-secondary text-center ">Enter your email and we'll send you an OTP to reset your password
              </p>
              <form method="post" action="/forgot-password-otp" onsubmit="return checkEmail()" name="forgotpassword">

                <div class="form-outline mb-2">
                  <label class="form-label" for="form3Example3cg">Email</label>
                  <input type="email" name="email" id="form3Example3cg" class="form-control form-control-lg"
                    style="border-style:solid ; border-color:#82AE46" required />
                </div>
                <div>
                  <p class="text-danger">{{err}}{{errMsg}}</p>
                  <p class="text-danger" id="errAdd"></p>
                </div>

                <div class="d-flex justify-content-center">

                  <button type="submit" class="btn btn-dark btn-lg mb-1 mt-4"
                    style="border-radius: 70px; height:40px; font-size:15px; background:#82AE46; border:none"
                    onclick="login()">Send OTP</button>
                </div>
                <p class="text-center mt-1"><a href="/user-login">Back to login</a></p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function checkEmail() {
    let email = document.forgotpassword.email.value;
    let emailRegex = /^(\w){3,16}@([A-Za-z]){5,8}.([A-Za-z]){2,3}$/gm;
    if (email == '') {
      document.getElementById('errAdd').innerHTML = "Email id required";
      return false;
    }
    else if (emailRegex.test(email) == false) {
      document.getElementById('errAdd').innerHTML = "Enter valid email id";
      return false;
    }
  }
</script>