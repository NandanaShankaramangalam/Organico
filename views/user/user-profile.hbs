{{>user-header}}

<link rel="stylesheet" href="/stylesheets/userprofile">
<style>
	.edit:hover: {
		color: #82AE46;
	}
</style>
<div class="container mt-2">
	<div class="main-body">
		<div class="row">
			<div class="col-lg-4">
				<div class="card">
					<div class="card-body">
						<div class="d-flex flex-column align-items-center text-center">
							<img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin"
								class="rounded-circle p-1 bg-primary" width="110">

							<div class="mt-3">
								<h4>{{user.name}}</h4>
							</div>
						</div>
						<hr class="my-4">
						<ul class="list-group list-group-flush">
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0"><i class="fa-solid fa-address-book me-3 fs-4 text-primary"></i><a
										href="/view-address-book" style="text-decoration: none;color: black;">Address
										Book</a></h6>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0"><i
										class="fa-sharp fa-solid fa-cart-shopping me-3 fs-5 text-success"></i><a
										href="/my-orders" style="text-decoration: none;color: black;">My Orders</a></h6>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0"><i class="fa-solid fa-heart me-3 fs-5 text-danger"></i><a
										href="/wishlist" style="text-decoration: none;color: black;">Wish List</a></h6>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0"><i class="fa-solid fa-key  me-3 fs-5 text-secondary"></i><a
										href="/change-password/{{userId}}"
										style="text-decoration: none;color: black;">Change Password</a></h6>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-1"><i class="fa-solid fa-right-from-bracket me-3 fs-5 text-dark"></i><a
										href="/logout" style="text-decoration: none;color: black;">Logout</a></h6>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<div class="card">
					<form method="post" name="userProfile" onsubmit="return userProfileCheck()"
						action="/update-user-profile/{{userInfo._id}}">
						<div class="card-body">
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Full Name</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="text" class="form-control" name="name" id="name"
										value="{{userInfo.name}}" readonly="readonly">
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Email</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input type="email" class="form-control" name="email" id="email"
										value="{{userInfo.email}}" readonly="readonly">
								</div>
							</div>

							<div class="row">
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
									<div id="edit-Button" onclick="change()" class="btn btn-primary px-4">Edit</div>
									<button type="submit" class="btn btn-primary px-4">Update</button>
								</div>
							</div>
						</div>
					</form>
				</div>
				<div class="row mt-2 mb-2">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-body d-flex align-items-center" style="background-color: #E8F2EE;">
								<img src="/images/Wallet.png" alt="">
								<h6>Wallet Amount : <span class="fw-bold"> â‚¹{{#if userInfo.wallet}} {{userInfo.wallet}}{{else}} 0{{/if}}</span> </h6>

								<div>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<div class="mb-2"></div>

{{>footer}}

<script>

	function change() {
		document.getElementById('name').readOnly = false;
		document.getElementById('email').readOnly = false;
	};

</script>