<section class="vh-100 bg-image" style="background-color: white;">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-4 ">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form method="post" action="/user-signup">

                <div class="form-outline mb-2 ">
                  <label class="form-label" for="form3Example1cg">Name</label>
                  <input type="text" name="name" id="form3Example1cg" class="form-control form-control-lg"
                    style="border-style:solid ; border-color:#82AE46" />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="form3Example3cg">Email</label>
                  <input type="email" name="email" id="form3Example3cg" class="form-control form-control-lg"
                    style="border-style:solid ; border-color:#82AE46" />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="form3Example4cg">Phone Number</label>
                  <input type="tel" name="phone" id="form3Example4cg" class="form-control form-control-lg"
                    style="border-style:solid ; border-color:#82AE46" />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="form3Example4cdg">Password</label>
                  <input type="password" name="password" id="form3Example4cdg" class="form-control form-control-lg"
                    style="border-style:solid ; border-color:#82AE46" />
                </div>
                <div class="form-outline mb-2">
                  <label class="form-label" for="form3Example5cdg">Re-enter Password</label>
                  <input type="password" name="confirmpassword" id="form3Example5cdg"
                    class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46" />
                </div>
                <div>
                  <p class="text-danger">{{errMsg}}</p>
                </div>
                <div class="d-flex justify-content-center">

                  <button type="submit" class="btn btn-dark btn-lg mb-1 mt-3"
                    style="border-radius: 70px; height:40px; font-size:15px; background:#82AE46; border:none">Signup</button>
                </div>

                <p class="text-center text-muted mt-3 mb-0">Have already an account? <a href="/user-login"
                    style="text-decoration: none;">Login here</a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>