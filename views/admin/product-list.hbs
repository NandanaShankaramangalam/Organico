{{>admin-header}}

<div class="container mt-5 mb-2">
  <h2 class="text-center">PRODUCT MANAGEMENT</h2>
</div>
<div class="container col-md">
  <div class="row">
    <div>
      <a class="mt-3 ms-2 btn" href="/admin/add-product"
        style="background-color:#82AE46; border-radius:7px; color:white; float:right; right:10px">Add Product</a>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row mt-3">
    <div class="col-12">
      <div class="table-responsive p-2">
        <table class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th>Sl.No</th>
              <th>Image</th>
              <th>Product Name</th>
              <th>Brand</th>
              <th>Category</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
            <tr>
              <td>{{inc @index}}</td>
              <td><img src="/product-images/{{Images.[0]}}.jpg" width="50px" height="50px" alt=""></td>
              <td>{{name}}</td>
              <td>{{brand}}</td>
              <td>{{category}}</td>
              <td>{{price}}</td>
              <td>{{stock}}</td>
              <td>
                <a href="/admin/edit-product/{{_id}}" class="btn btn-secondary">Edit</a>
                {{#if status}}

                <a class="btn btn-warning" onclick="return confirm('Are you sure you want to unlist {{name}}?')"
                  href="/admin/delete-product/{{_id}}">Unlist</a>
              </td>
              {{else}}
              <a class="btn btn-danger" onclick="return confirm('Are you sure you want to list {{name}}?')"
                href="/admin/list-product/{{_id}}">List</a></td>

              {{/if}}
              </a>
              <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog"
                aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm">
                  <div class="modal-content">
                    Delete Cancelled
                  </div>
                </div>
              </div>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>