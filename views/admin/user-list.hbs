{{>admin-header}}

<div class="container mt-5">
    <h2 class="text-center">USER MANAGEMENT</h2>
</div>

<div class="container">
    <div class="row mt-3">
        <div class="col-12">
            <div class="table-responsive p-2">
                <table class="table table-striped table-bordered" id="example">
                    <thead>
                        <tr>
                            <th>Sl.No</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each dataList}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{phone}}</td>

                            {{#if status}}
                            <td class="text-success">Active</td>
                            <td><a class="btn btn-secondary"
                                    onclick="return confirm('Are you sure you want to block {{name}}?')"
                                    href="/admin/block-user/{{_id}}">Block</a></td>

                            {{else}}
                            <td class="text-danger">Blocked</td>
                            <td><a class="btn btn-warning"
                                    onclick="return confirm('Are you sure you want to unblock {{name}}?')"
                                    href="/admin/unblock-user/{{_id}}">Unblock</a></td>

                            {{/if}}
                            </a>
                            <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog"
                                aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-sm">
                                    <div class="modal-content">
                                        Delete Cancelled
                                    </div>
                                </div>
                            </div>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>