{{>admin-header}}

<div class="hero-wrap hero-bread" style="background-image: url('/images/bg_1.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Checkout</span>
                </p>
                <h1 class="mb-0 bread">Add Banner</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <form action="/admin/banner" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <img src="/banner-images/banner.jpg" width="100%" id="img" class="mt-3">
                </div>
                <div class="col-md-6 mt-4 pt-3 ps-3 pe-3 pb-3">

                    <div class="form-outline mb-2 mt-4">
                        <input style="line-height: 40px;" class="mt-3"
                            style="width: 600px; ;line-height:20px; font-size: small;" type="file" name="bannerImage"
                            id="file" accept="image/*" onchange="viewImage(event,'sub')" />
                    </div>
                    <div class="d-flex">
                        <button type="submit" class="btn btn-dark btn-lg mb-1 mt-3 float-start"
                            style=" border-radius: 7px; height:40px; width:98px; font-size:15px; background:#82AE46; border:none">Add</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <form action="/admin/banner" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <img src="/banner-images/banner2.jpg" width="100%" id="img" class="mt-3">
                </div>
                <div class="col-md-6 mt-4 pt-3 ps-3 pe-3 pb-3">

                    <div class="form-outline mb-2 mt-4">
                        <input style="line-height: 40px;" class="mt-3"
                            style="width: 600px; ;line-height:20px; font-size: small;" type="file" name="bannerImage2"
                            id="file" accept="image/*" onchange="viewImage(event,'sub')" />
                    </div>
                    <div class="d-flex">
                        <button type="submit" class="btn btn-dark btn-lg mb-1 mt-3"
                            style="border-radius: 7px; height:40px; width:98px; font-size:15px; background:#82AE46; border:none">Add</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function viewImage(event, name) {
        document.getElementById(name).src = URL.createObjectURL(event.target.files[0])
    }
</script>