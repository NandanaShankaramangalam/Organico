{{!-- form --}}
<section class="vh-100 bg-image mt-5" style="background-color: white;">
  <div class="mask d-flex align-items-center  gradient-custom-3">
    <div class="container ">
      <div class="row d-flex justify-content-center align-items-center ">
        <div class="col-12">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-4 ">
              <h2 class="text-uppercase text-center mb-5">Edit Product</h2>

              <form method="post" action="/admin/edit-product/{{productData._id}}" enctype="multipart/form-data">

                <div class="form-outline mb-2 ">
                  <label class="form-label" for="form3Example1cg">Product Name</label>
                  <input type="text" name="name" value="{{productData.name}}" id="form3Example1cg"
                    class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46" />
                </div>

                <div class="form-outline mb-2 ">
                  <label class="form-label" for="brand">Brand</label>
                  <input type="text" name="brand" value="{{productData.brand}}" id="brand"
                    class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46" />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="category">Category</label>
              
                  <select name="category" id="category" class="form-control form-control-lg"
                    style="border-style:solid ; border-color:#82AE46">
                    <option value=""selected>{{productData.category}}</option>
                    {{#each categoryData}}
                    <option value="{{category}}">{{category}}</option>
                    {{/each}}
                    {{!-- <option value="{{category}}" {{#if productData.category}}selected{{/if}}>{{category}}</option> --}}
                    {{!-- <option {{#if ../productData}} value="{{../productData.category}}"selected{{/if}}>{{category}}</option> --}}
                    
                    {{!-- <option {{#if productData}} value="{{productData.category}}" {{else}} value="" {{/if}}> {{#if
                      productData}} {{productData.category}} {{else}}Select{{/if}}</option> --}}
                    {{!-- <option value="Vegetables">Vegetables</option>
                    <option value="Fruits">Fruits</option>
                    <option value="Juice">Juice</option>
                    <option value="Dried Fruits">Dried Fruits</option> --}}
                  </select>
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="price">Price</label>
                  <input type="text" name="price" value="{{productData.price}}" id="price"
                    class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46" />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="stock">Stock</label>
                  <input type="text" name="stock" value="{{productData.stock}}" id="stock"
                    class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46" />
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="description">Description</label>
                  <textarea name="description" id="description" cols="8" rows="5" class="form-control form-control-lg"
                    style="border-style:solid ; border-color:#82AE46" noresize> {{productData.description}}</textarea>
                </div>

                <div class="form-outline mb-2 d-flex">
                  {{#each productData.Images}}
                  <img src="/product-images/{{[]}}.jpg" alt="{{productData.name}}" style="width: 100px; height:auto"
                    id="{{@index}}" onchange="viewImage(event)">
                  <input style="line-height: 40px;" class="mt-3 ms-2"
                    style="width: 600px; ;ine-height:20px; font-size: small;" type="file" name="{{[]}}" id="file"
                    accept="image/*" />

                  {{/each}}
                </div>
                
                <div>
                  <p class="text-danger">{{errMsg}}</p>
                </div>
                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-dark btn-lg mb-1 mt-3"
                    style="border-radius: 7px; height:40px; width:120px; font-size:15px; background:#82AE46; border:none">Update</button>
                </div>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  function viewImage(event) {
    document.getElementById('image').src = URL.createObjectURL(event.target.files[0]);
  }
</script>