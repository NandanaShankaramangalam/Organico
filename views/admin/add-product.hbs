{{>admin-header}}

 {{!-- form --}}
<section class="vh-100 bg-image mt-5" style="background-color: white;">
  <div class="mask d-flex align-items-center  gradient-custom-3">
    <div class="container ">
      <div class="row d-flex justify-content-center align-items-center ">
        <div class="col-12">
          <div class="card" style="border-radius: 15px;" >
            <div class="card-body p-4 ">
              <h2 class="text-uppercase text-center mb-5">Add Product</h2>

              <form method="post" action="/admin/add-product" enctype="multipart/form-data">

                <div class="form-outline mb-2 ">
                  <label class="form-label" for="form3Example1cg">Product Name</label>
                  <input type="text" name="name" id="form3Example1cg" class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46"/>
                </div>

                <div class="form-outline mb-2 ">
                  <label class="form-label" for="brand">Brand</label>
                  <input type="text" name="brand" id="brand" class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46"/>
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="category">Category</label>
                     {{!-- <input type="text" name="category" id="category" class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46"/>  --}}
                      <select name="category" id="category" class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46">  
                        <option value="">Select</option>
                        {{#each categoryData}}
                        <option value="{{category}}">{{category}}</option>
                        {{/each}}
                        {{!-- <option value="Fruits">Fruits</option>
                        <option value="Juice">Juice</option>
                        <option value="Dried Fruits">Dried Fruits</option> --}}
                      </select>
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="price">Price</label>
                  <input type="text" name="price" id="price" class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46"/>
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="stock">Stock</label>
                  <input type="text" name="stock" id="stock" class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46"/>
                </div>

                <div class="form-outline mb-2">
                  <label class="form-label" for="description">Description</label>
                  <textarea name="description" id="description" cols="8" rows="5" class="form-control form-control-lg" style="border-style:solid ; border-color:#82AE46" noresize></textarea>
                </div>

                <div class="form-outline mb-2">
                   <input style="line-height: 40px;" class="mt-3 ms-2" style="width: 600px; ;ine-height:20px; font-size: small;" type="file" name="image" id="file" accept="image/*" multiple required/> 
                </div>

                <div>
                  <p class="text-danger">{{errMsg}}</p>
                </div>
                <div class="d-flex justify-content-center">
  
            <button type="submit" class="btn btn-dark btn-lg mb-1 mt-3" style="border-radius: 7px; height:40px; width:120px; font-size:15px; background:#82AE46; border:none">Add</button>
                </div>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
